@model List<DinoLoan.Entity.Loan>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="../">Loan</a></li>
    <li class="breadcrumb-item active">Add loan</li>
  </ol>
</nav>

<button  class="btn btn-success mb-4 mt-4" data-bs-toggle="modal" data-bs-target="#addLoanModal">Add new loan</button>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Type</th>
            <th>No Payments</th>
            <th>Total Payments</th>
            <th>Collected</th>
            <th>Collectables</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loanData in Model)
        {
            <tr>
                <td>@loanData.Id</td>
                <td>@loanData.Type</td>
                <td>@loanData.NoOfPayment</td>
                <td>@loanData.TotalPayable</td>
                <td>@loanData.Collected</td>
                <td>@loanData.Collectable</td>
                <td>@loanData.Status</td>
                <td>
                    <a class="btn btn-info" asp-controller="Payment" asp-action="Index">Payments</a>
                    <a class="btn btn-warning" asp-action="Update">Receipt</a>
                    @* <a class="btn btn-danger" asp-action="Delete">Delete</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("_AddLoan.cshtml")

@section Scripts {
    <script src="~/js/addloan.js"></script>
}