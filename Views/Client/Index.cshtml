@model IEnumerable<dotnet_web_mvc.ViewModels.ClientInfoViewModel>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" href="#">Client Information</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="usertype">User type</a>
</ul>

<a class="btn btn-success mt-4" href="client/create">Add new client</a>

<div class="container table-responsive">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th class="col">#</th>
                <th class="col">UserType</th>
                <th class="col">FirstName</th>
                <th class="col">MiddleName</th>
                <th class="col">LastName</th>
                <th class="col">Address</th>
                <th class="col">ZipCode</th>
                <th class="col">Birthday</th>
                <th class="col">Age</th>
                <th class="col">NameOfFather</th>
                <th class="col">NameOfMother</th>
                <th class="col">CivilStatus</th>
                <th class="col">Religion</th>
                <th class="col">Occupation</th>
                <th class="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var clientInfo in Model)
            {
                <tr>
                    <th>@clientInfo.Id</th>
                    @* <td>@foreach (var userType in ViewData["UserTypes"] as List<Usertype>)
                        {
                            @if (userType.Id == clientInfo.UserType)
                            {
                                @userType.Name
                            }
                        }</td> *@
                    <td>@clientInfo.UserTypeName</td>
                    <td>@clientInfo.FirstName</td>
                    <td>@clientInfo.MiddleName</td>
                    <td>@clientInfo.LastName</td>
                    <td>@clientInfo.Address</td>
                    <td>@clientInfo.ZipCode</td>
                    <td>@clientInfo.Birthday.ToString("MMM dd yyyy")</td>
                    <td>@clientInfo.Age</td>
                    <td>@clientInfo.NameOfFather</td>
                    <td>@clientInfo.NameOfMother</td>
                    <td>@clientInfo.CivilStatus</td>
                    <td>@clientInfo.Religion</td>
                    <td>@clientInfo.Occupation</td>
                    <td>
                        <a class="btn btn-warning" href="client/update/@clientInfo.Id">Update</a>
                        <a class="btn btn-danger" href="client/delete/@clientInfo.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
